<table>
  <thead>
    <tr>
      <th width="100">Name</th>
      <th width="550">Type</th>
      <th>Designed by</th>
    </tr>
  </thead>

  <tbody>
    <% languages.each do |language| %>
      <tr>
        <td><%= language.name %></td>
        <td><%= types( language ) %></td>
        <td><%= authors( language ) %></td>
      </tr>
    <% end %>
  </tbody>
</table>
